@model Gestion_Stagiaire.Models.DemandeStage

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DemandeStage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StagiaireId" class="control-label"></label>
                <select asp-for="StagiaireId" class="form-control" asp-items="ViewBag.StagiaireId"></select>
                <span asp-validation-for="StagiaireId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type_Stage" class="control-label"></label>
                <input asp-for="Type_Stage" class="form-control" />
                <span asp-validation-for="Type_Stage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_Debut" class="control-label"></label>
                <input asp-for="Date_Debut" class="form-control" type="date" value="@Model.Date_Debut.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date_Debut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_Fin" class="control-label"></label>
                <input asp-for="Date_Fin" class="form-control" type="date" value="@Model.Date_Fin.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date_Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Path_Demande_Stage" class="control-label">Demande Stage File</label>
                <input asp-for="Path_Demande_Stage" class="form-control" type="file" />
                <span asp-validation-for="Path_Demande_Stage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date_Demande" class="control-label"></label>
                <input asp-for="Date_Demande" class="form-control" type="datetime-local" value="@Model.Date_Demande.ToString("yyyy-MM-ddTHH:mm")" readonly />
                <span asp-validation-for="Date_Demande" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Affectation" class="control-label"></label>
                <input asp-for="Affectation" class="form-control" />
                <span asp-validation-for="Affectation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commentaire" class="control-label"></label>
                <input asp-for="Commentaire" class="form-control" />
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}